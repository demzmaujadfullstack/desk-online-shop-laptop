import sys
from tkinter import Tk, Label

root = Tk()
root.title("Transaksi")
root.geometry("400x200")

args = sys.argv
nama = args[1] if len(args) > 1 else "-"
harga = args[2] if len(args) > 2 else "-"
user = args[3] if len(args) > 3 else "-"

Label(root, text=f"Pembelian oleh: {user}", font=("Arial", 12)).pack(pady=10)
Label(root, text=f"Laptop: {nama}", font=("Arial", 12)).pack(pady=5)
Label(root, text=f"Harga: Rp {harga}", font=("Arial", 12)).pack(pady=5)
Label(root, text="Terima kasih sudah berbelanja!", font=("Arial", 12, "bold")).pack(pady=20)

root.mainloop()
